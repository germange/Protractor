{
    "extends": "airbnb",
    "env": {
        "node": true,
        "mocha": true
      },
      "globals": {
        "ENV": false,
        "allure": false,
        "browser": false,
        "$$": false,
        "$": false,
        "expect": false,
        "jasmine": false,
        "by": false,
        "protractor": false,
        "element": false,
        "elements": false,
        "isTablet": false,
        "mobileLocator": false,
        "deviceName": false,
        "actionsHelper": false,
        "stepsHelper": false
    },
      "rules": {
        "linebreak-style": "off",
        "no-useless-escape": "off",
        "prefer-const": "off",
        "quotes": "off",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-plusplus": "off",
        "prefer-template": "off",
        "comma-dangle": "off",
        "eol-last": "off",
        "import/no-extraneous-dependencies": "off",
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "no-console": "off",
        "max-len": ["error", { "code": 120, "ignoreComments": true, "ignoreTemplateLiterals": true }],
        "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "global-require": "off",
        "no-await-in-loop": "off",
        "no-return-await": "off",
        "no-restricted-syntax": "off",
        "require-await": "error",
        "no-var": "error",
        "no-continue": "off",
        "guard-for-in": "off"
      }
}